{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "module": "amd",
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "typeRoots": [
      "./node_modules/@craftdocs/craft-extension-api"
    ],
    "paths": {
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
